<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="victoriannamanocchio.Findsynonymantonym.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:text="Find synonym/antonym"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/TFword"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <Button
        android:id="@+id/bSynAnt"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:onClick="onSearchClick"
        android:text="Find Synonym/Antonym"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bEnterValues"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:onClick="onEnterValuesClick"
        android:text="Enter Values"
        android:textSize="18sp" />
</LinearLayout>
